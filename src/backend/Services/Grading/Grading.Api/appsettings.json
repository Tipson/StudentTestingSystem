{
  "Keycloak": {
    "Authority": "http://localhost:8080/realms/lms",
    "Audience": "account",
    "RequireHttpsMetadata": true
  },
  "Gemini": {
    "ApiKey": "",
    "Model": "gemini-2.0-flash-exp",
    "BaseUrl": "https://generativelanguage.googleapis.com/v1beta"
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Username": "admin",
    "Password": "admin123"
  },
  "AI": {
    "Enabled": true,
    "GradingEnabled": true,
    "HintsEnabled": false,
    "TestGenerationEnabled": false,
    "MinimumConfidenceThreshold": 0.8
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "MassTransit": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {ServiceName} | {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/grading-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {ServiceName} | {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId", "WithEnvironmentName"]
  },
  "AllowedHosts": "*"
}
